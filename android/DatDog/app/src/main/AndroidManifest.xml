            android:name=".ConnectActivity"
            android:label="Connect" />
        <activity
            android:name=".DogsActivity"
            android:label="Your dogs" />
        <activity
            android:name=".AddDogActivity"
            android:label="Add dog"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".UserInfoActivity"
            android:label="User info" />
        <activity
            android:name=".EditUserActivity"
            android:label="Edit user"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" />
        <activity
            android:name=".DogInfoActivity"
            android:label="Dog info" />
        <activity
            android:name=".EditDogActivity"
            android:label="Edit dog"
            android:windowSoftInputMode="adjustPan" />
